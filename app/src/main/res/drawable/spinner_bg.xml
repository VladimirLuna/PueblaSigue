<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true"
        android:color="@color/white">
        <shape>
            <solid
                android:color="@color/grayIconTint" />
            <padding
                android:left="4dp"
                android:top="0dp"
                android:right="4dp"
                android:bottom="0dp" />
            <corners android:radius="20dp" />
        </shape>
    </item>
    <item android:color="@color/grayIconTint">
        <shape>
            <solid
                android:color="@color/grayIconTint">
            </solid>
            <padding
                android:left="0dp"
                android:top="2dp"
                android:right="0dp"
                android:bottom="2dp" />
            <corners android:radius="20dp" />
        </shape>
    </item>
</selector>